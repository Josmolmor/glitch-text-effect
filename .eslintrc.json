{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "JSX": "readonly"
  },
  "rules": {
    "no-unused-vars": ["error", {"argsIgnorePattern": "^_"}]
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "*.config.js"
  ]
}