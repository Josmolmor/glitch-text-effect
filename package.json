{
  "name": "glitch-text-effect",
  "version": "1.0.1",
  "type": "module",
  "description": "A lightweight, customizable glitch text effect library with zero dependencies. Framework-agnostic core with React wrapper.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",  
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react.esm.js",
      "require": "./dist/react.js",
      "types": "./dist/react.d.ts"
    },
    "./core": {
      "import": "./dist/core.esm.js",
      "require": "./dist/core.js",
      "types": "./dist/core.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:dry": "node scripts/release.js patch --dry-run"
  },
  "keywords": [
    "glitch",
    "text",
    "animation",
    "effect",
    "react",
    "typescript",
    "vanilla-js",
    "lightweight",
    "zero-dependencies",
    "ui",
    "animation-library"
  ],
  "author": "Jose Maria Molina <molinamw@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/josmolmor/glitch-text-effect.git"
  },
  "bugs": {
    "url": "https://github.com/josmolmor/glitch-text-effect/issues"
  },
  "homepage": "https://github.com/josmolmor/glitch-text-effect#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.6.1",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14.0.0"
  }
}